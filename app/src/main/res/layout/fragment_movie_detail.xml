<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_detail_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/movie_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/original_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/movie_detail_title_text_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/movie_detail_title_margin_top_bottom"
                android:layout_marginBottom="@dimen/movie_detail_title_margin_top_bottom"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/poster_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/asd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/movie_detail_metadata_margin_left">

                    <TextView
                        android:id="@+id/release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/movie_detail_release_date_text_size"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/movie_detail_release_date_margin_bottom"/>

                    <TextView
                        android:id="@+id/vote_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/movie_detail_vote_average_text_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/movie_detail_review_count_margin_top">

                        <TextView
                            android:id="@+id/review_count_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/movie_detail_review_count_label"
                            android:textSize="@dimen/movie_detail_review_data_text_size"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/movie_detail_review_data_text_size"
                            android:layout_marginLeft="@dimen/movie_detail_review_count_margin_leftright"
                            android:layout_marginRight="@dimen/movie_detail_review_count_margin_leftright"/>

                        <TextView
                            android:id="@+id/read_reviews_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/movie_detail_read_reviews_link"
                            android:textSize="@dimen/movie_detail_review_data_text_size"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/movie_detail_overview_margin_top" />

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/progress_bar" />

</RelativeLayout>
